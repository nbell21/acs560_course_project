@model HR_Query.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

    <h1>@ViewBag.Title.</h1>
    <div class="well">
    <h3>Create a new account.</h3>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
           
        <p>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.UserName, String.Empty, new { @class = "text-danger" })
        </p>
        <p>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @class = "text-danger" })
        </p> 
        <p>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
       </p>    
    
        <br />
    
        @Html.ValidationSummary(String.Empty, new { @class = "strong text-danger" })
    
        <button type="submit" class="btn btn-info">Register</button>
    
}
        <br />

        <p>
            @Html.ActionLink("Log in", "Index") to return to log in screen.
        </p>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
